<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <display-name>DBApp2_P133</display-name>
  <welcome-file-list>
    <welcome-file>input.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>db</servlet-name>
    <servlet-class>com.nt.servlet.DbServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>db</servlet-name>
    <url-pattern>/dburl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>head</servlet-name>
    <servlet-class>com.nt.servlet.HeaderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>head</servlet-name>
    <url-pattern>/headurl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>err</servlet-name>
    <servlet-class>com.nt.servlet.ErrorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>err</servlet-name>
    <url-pattern>/errurl</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>driver</param-name>
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>
  </context-param>
  <context-param>
    <param-name>conn</param-name>
    <param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>dev</param-value>
  </context-param>
  <context-param>
    <param-name>pass</param-name>
    <param-value>dev</param-value>
  </context-param>
</web-app>